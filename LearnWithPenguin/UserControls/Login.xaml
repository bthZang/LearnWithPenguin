<UserControl x:Name="Login1"
             x:Class="LearnWithPenguin.UserControls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LearnWithPenguin.UserControls"
             mc:Ignorable="d"
             Height="800"
             Width="947">
    <Grid Margin="110,99,50, 0">
        <StackPanel HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Center"
                        Margin="0 0 0 160.32">
                <TextBlock Text="HỌC CÙNG PENGUIN"
                           Foreground="#FF073580"
                           FontSize="56.56"
                           FontWeight="Bold"
                           FontStyle="Normal"
                           LineStackingStrategy="MaxHeight"
                           Style="{StaticResource Baloo2-Bold}"
                           Width="512"
                           Height="86"
                           HorizontalAlignment="Center" />
                <StackPanel VerticalAlignment="Top"
                            Margin="0 24.12 0 0">
                    <Border Background="#BDB2FF"
                            Width="300.78"
                            Height="63.28"
                            CornerRadius="23.44"
                            BorderThickness="4"
                            BorderBrush="#000000">
                        <Grid>

                            <TextBox Width="250"
                                     DataContext="{StaticResource MainVM}"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Top"
                                     HorizontalAlignment="Center"
                                     Margin="0,8,0,0"
                                     BorderBrush="#BDB2FF"
                                     Background="#BDB2FF"
                                     Foreground="#FFFFFF"
                                     FontSize="21.88"
                                     BorderThickness="0"
                                     FontStyle="Normal"
                                     FontWeight="Bold"
                                     Tag="Email đăng nhập"
                                     TextAlignment="Left"
                                     SelectionBrush="#BDB2FF">
                                <TextBox.Style>
                                    <Style 
                                           TargetType="{x:Type TextBox}"
                                           BasedOn="{StaticResource Baloo2-Bold}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Grid>
                                                        <TextBox Text="{Binding Path=Text,
                                                RelativeSource={RelativeSource TemplatedParent}, 
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"
                                                                 x:Name="textSource"
                                                                 Foreground="#FFFFFF"
                                                                 BorderThickness="0"
                                                                 Background="Transparent"
                                                                 Panel.ZIndex="2" />
                                                        <TextBox Text="{TemplateBinding Tag}"
                                                                 Background="{TemplateBinding Background}"
                                                                 Panel.ZIndex="1">
                                                            <TextBox.Style>
                                                                <Style TargetType="{x:Type TextBox}">
                                                                    <Setter Property="Foreground"
                                                                            Value="Transparent" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}"
                                                                                     Value="">
                                                                            <Setter Property="Foreground"
                                                                                    Value="White" />
                                                                            <Setter Property="TextAlignment"
                                                                                    Value="Center" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

