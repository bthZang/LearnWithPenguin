<UserControl x:Class="LearnWithPenguin.UserControls.HomeIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearnWithPenguin.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="34.99"
             d:DesignWidth="97.13">
    <Grid>
        <Button Background="Transparent"
                BorderThickness="0"
                Width="97.13"
                Height="34.99"
                DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Border.CornerRadius"
                            Value="6 6 6 6" />
                </Style>
            </Button.Resources>
            <Image Source="/UserControls/homeMenu.png"
                   Width="97.13"
                   Height="34.99"></Image>
        </Button>

    </Grid>
</UserControl>
