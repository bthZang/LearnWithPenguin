<UserControl x:Name="BacknForward"
             x:Class="LearnWithPenguin.UserControls.BackForward"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LearnWithPenguin.UserControls"
             mc:Ignorable="d"
             Height="54.56"
             Width="543"
             DataContext="{StaticResource CodingVM}"
>

    <StackPanel
        Orientation="Horizontal"
        HorizontalAlignment="Center">

        <Button x:Name="Back" 
            Width="20"
            Background="Transparent">
            <Image Source="/images/Back.png"/>
        </Button>

        <TextBlock
            Text="Bài 1"
            Foreground="#FF073580"
            FontSize="30"
            FontWeight="Bold"
            FontStyle="Normal"
            LineStackingStrategy="MaxHeight"
            Style="{StaticResource Baloo2-Bold}"
            Width="65"
            Margin="20, 0, 20, 0"
            HorizontalAlignment="Center" />

        <Button x:Name="Forward"
            Width="20"
            Background="Transparent">
            <Image Source="/images/Forward.png"></Image>
        </Button>
    </StackPanel>
</UserControl>
