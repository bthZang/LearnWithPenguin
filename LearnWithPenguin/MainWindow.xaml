                    FontSize="24.45" 
                    FontWeight="Bold" 
                    FontStyle="Normal" 
                    LineStackingStrategy="MaxHeight"
                    Style="{StaticResource Baloo2-Bold}" 
                    Width="118"
 Height="31"
                    />
