<Page x:Class="LearnWithPenguin.View.GameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnWithPenguin.View"
      xmlns:viewmodel="clr-namespace:LearnWithPenguin.ViewModel"
      xmlns:localUser="clr-namespace:LearnWithPenguin.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameView">

    <Grid Background="#A0C4FF">
        <StackPanel Orientation="Vertical" Margin="7,0,-7,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Background="Beige"
                           Width="100"
                           Height="100">
                </TextBlock>

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                >
                    <Button 
                        x:Name="Back" 
                        Command="{Binding BackCommand}"
                        CommandParameter="{Binding ElementName=BacknForward}"
                        Width="20"
                        Background="Transparent"
                        BorderThickness="0">
                        <Image Source="/images/Back.png"/>
                    </Button>

                    <TextBlock
                        Text="Bài"
                        Foreground="#FF073580"
                        FontSize="30"
                        FontWeight="Bold"
                        FontStyle="Normal"
                        LineStackingStrategy="MaxHeight"
                        Style="{StaticResource Baloo2-Bold}"
                        Width="65"
                        Margin="10, 0, 0, 0"
                        HorizontalAlignment="Center" 
                        TextAlignment="Center" 
                        VerticalAlignment="Center"
                    />

                    <TextBlock
                        x:Name="Number"
                        Text="{Binding PositionNumber, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="#FF073580"
                        FontSize="30"
                        FontWeight="Bold"
                        FontStyle="Normal"
                        LineStackingStrategy="MaxHeight"
                        Style="{StaticResource Baloo2-Bold}"
                        Width="auto"
                        Margin="0, 0, 20, 0"
                        HorizontalAlignment="Center" 
                        TextAlignment="Center"
                        VerticalAlignment="Center">
                    </TextBlock>

                    <Button 
                        x:Name="Forward"
                        Command="{Binding ForwardCommand}"
                        CommandParameter="{Binding ElementName=BacknForward}"
                        Width="20"
                        Background="Transparent"
                        BorderThickness="0">
                        <Image Source="/images/Forward.png"></Image>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel>
                <Border
                    Background="Beige"
                    BorderBrush="#073580"
                    BorderThickness="4, 4, 4, 4"
                    CornerRadius="30"
                    Width="684"
                    Height="284"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    >
                    <StackPanel Orientation="Vertical">
                        <StackPanel Background="CadetBlue"
                            Width="682"
                            Height="205">

                        </StackPanel>
                        <Border Background="Chocolate"
                                CornerRadius="0, 0, 30, 30"
                                Width="680"
                                Height="71.22"
                                HorizontalAlignment="Center"
                                >
                            <StackPanel Background="Transparent"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel></StackPanel>
        </StackPanel>
    </Grid>
</Page>
