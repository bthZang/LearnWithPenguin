<Page x:Class="LearnWithPenguin.View.WriteView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LearnWithPenguin.View"
      xmlns:viewmodel="clr-namespace:LearnWithPenguin.ViewModel"
      xmlns:localUC="clr-namespace:LearnWithPenguin.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="800"
      d:DesignWidth="1125"
      Title="WriteView">

    <Page.Resources>
        <DataTemplate DataType="{x:Type viewmodel:IconViewModel}">
            <localUC:Icon />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:MenuViewModel}">
            <localUC:Menu />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:HomeIconViewModel}">
            <localUC:HomeIcon />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:BadResultViewModel}">
            <localUC:BadResult DataContext="{StaticResource WriteVM}"
                               Replay="{Binding Replay}"
                               Next="{Binding OnclickHandleNextLevel}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:GoodResultViewModel}">
            <!--<localUC:GoodResult DataContext="{StaticResource WriteVM}"
                                Replay="{Binding Replay}"
                                Next="{Binding OnclickHandleNextLevel}"/>-->
            <localUC:GoodResult></localUC:GoodResult>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#FFA0C4FF">
        <ContentControl Panel.ZIndex="9999"
                        DataContext="{StaticResource MainVM}"
                        Content="{Binding Menu}" />
        <ContentControl Panel.ZIndex="9999"
                        DataContext="{StaticResource WriteVM}"
                        Content="{Binding NavigatetoResult}" />
        <StackPanel DataContext="{StaticResource WriteVM}">

            <DockPanel>
                <Grid>
                    <localUC:Icon Width="63.28"
                                  Height="63.28"
                                  Margin="42.97,35.16,0,0"
                                  DataContext="{StaticResource MainVM}"
                                  Command="{Binding ShowMenu}">

                    </localUC:Icon>
                </Grid>
                <Grid Width="1018"
                      HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                Width="{x:Static SystemParameters.PrimaryScreenWidth}">
                        <Button Margin="336.67 32.11 0 0"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="50.14"
                                DataContext="{StaticResource WriteVM}"
                                Command="{Binding OnclickHandlePreviousLevel}"
                                Height="50.14">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Border.CornerRadius"
                                            Value="3 3 3 3" />
                                </Style>
                            </Button.Resources>
                            <Image Source="/UserControls/backIcon.png"
                                   Width="38.8"
                                   Height="42.9"></Image>
                        </Button>
                        <TextBlock Width="94"
                                   Height="57"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   Foreground="#073580"
                                   FontSize="36.09"
                                   FontStyle="Normal"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   DataContext="{StaticResource WriteVM}"
                                   Text="{ Binding ConcatTitle}"
                                   Style="{StaticResource Baloo2-Bold}"
                                   Margin="43.13,38.49,0,8" />
                        <Button Margin="53.32 32.11 0 0"
                                Background="Transparent"
                                BorderThickness="0"
                                DataContext="{StaticResource WriteVM}"
                                Command="{Binding OnclickHandleNextLevel}"
                                Width="50.13"
                                Height="50.13">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Border.CornerRadius"
                                            Value="3 3 3 3" />
                                </Style>
                            </Button.Resources>
                            <Image Source="/View/next.png"
                                   Width="38.8"
                                   Height="42.9"></Image>
                        </Button>
                    </StackPanel>
                </Grid>
            </DockPanel>

            <StackPanel>
                <Border Height="550"
                        Width="962.5"
                        CornerRadius="31.25"
                        Margin="0 65.34 0 0"
                        BorderThickness="8">
                    <Image Source="/View/border.png"></Image>
                </Border>
                <Grid Height="550"
                      Width="925"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0 -560 0 0">
                    <Image DataContext="{StaticResource WriteVM}"
                           Source="{ Binding SouceDash}"
                           Height="400"
                           Opacity="0.5"
                           Width="325"
                           Margin="66,8,0,0"></Image>
                    <InkCanvas Background="Transparent"
                               ForceCursor="True"
                               Cursor="Pen"
                               x:Name="MyCanvas"
                               Margin="0,10,0,10"
                               Panel.ZIndex="75"
                               MinWidth="900"
                               MinHeight="900"
                               MouseDown="MyCanvas_MouseDown"
                               MouseMove="MyCanvas_MouseMove" />
                </Grid>
                <Button Height="171.09"
                        Width="171.09"
                        Margin="900 -1065.34 0 0"
                        BorderThickness="0"
                        Background="Transparent">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    BorderThickness="0"
                                    Background="transparent"
                                    BorderBrush="transparent">

                                <ContentPresenter Margin="0"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused"
                                         Value="true">
                                    <Setter TargetName="Border"
                                            Property="BorderBrush"
                                            Value="transparent" />
                                </Trigger>
                                <Trigger Property="IsMouseOver"
                                         Value="true">
                                    <Setter TargetName="Border"
                                            Property="Background"
                                            Value="transparent" />
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="true">
                                    <Setter TargetName="Border"
                                            Property="Background"
                                            Value="transparent" />
                                    <Setter TargetName="Border"
                                            Property="BorderBrush"
                                            Value="transparent" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Border Height="171.09"
                            Width="171.09"
                            Background="#FFFFFF"
                            CornerRadius="31.25"
                            BorderBrush="#073580"
                            BorderThickness="4">
                        <Button Width="48"
                                BorderThickness="0"
                                Background="Transparent"
                                Command="{Binding ReplayVideo}"
                                Height="48"
                                Click="Button_Click">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Border.CornerRadius"
                                            Value="8" />
                                </Style>
                            </Button.Resources>
                            <Image DataContext="{StaticResource WriteVM}"
                                   Source="{ Binding SouceSolid}"></Image>
                        </Button>

                    </Border>
                </Button>
                <MediaElement x:Name="media"
                              Height="593.03"
                              LoadedBehavior="Manual"
                              Panel.ZIndex="9999"
                              UnloadedBehavior="Manual"
                              DataContext="{StaticResource WriteVM}"
                              Visibility="{Binding IsDisplayVideo}"
                              Margin="0 -565.34 0 0"
                              Source="{ Binding ConcatVideo}"
                              MediaEnded="media_MediaEnded"></MediaElement>

                <Button Height="71.09"
                        Width="171.09"
                        Margin="900 -25.34 0 0"
                        DataContext="{StaticResource WriteVM}"
                        Command="{Binding ShowResult}"
                        Background="Transparent">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    BorderThickness="4"
                                    Background="DarkSeaGreen"
                                    CornerRadius="21.25"
                                    BorderBrush="#073580">

                                <ContentPresenter Margin="0"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused"
                                         Value="true">
                                    <Setter TargetName="Border"
                                            Property="BorderBrush"
                                            Value="Green" />
                                </Trigger>
                                <Trigger Property="IsMouseOver"
                                         Value="true">
                                    <Setter TargetName="Border"
                                            Property="Background"
                                            Value="Green" />
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="true">
                                    <Setter TargetName="Border"
                                            Property="Background"
                                            Value="Green" />
                                    <Setter TargetName="Border"
                                            Property="BorderBrush"
                                            Value="Green" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Width="154"
                               Height="57"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Foreground="#073580"
                               FontSize="36.09"
                               FontStyle="Normal"
                               TextAlignment="Center"
                               Text="Nộp bài"
                               Style="{StaticResource Baloo2-Bold}" />
                </Button>

