<Page x:Class="LearnWithPenguin.View.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LearnWithPenguin.View"
      mc:Ignorable="d"
      d:DesignHeight="800"
      d:DesignWidth="1125"
      Title="HomeView">

    <Grid Background="#FFA0C4FF">
        <StackPanel Orientation="Horizontal">
            <StackPanel  Margin="156.35 196.88 74.9 0">
                <Button DataContext="{StaticResource MainVM}"
                        Command="{Binding TransformToRead}">
                    <Image Stretch="Uniform"
                           Source="../images/TapDoc.png"
                           Height="251.52"
                           Width="195.66" />
                </Button>

                <Button DataContext="{StaticResource MainVM}"
                        Command="{Binding TransformToWrite}">
                    <Image Stretch="Uniform"
                           Source="../images/TapViet.png"
                           Height="251.52"
                           Width="195.66"
                           Margin="0 47.19 0 0"></Image>
                </Button>
            </StackPanel>
            <StackPanel Margin="74.22 170.88 74.9 0">
                <Button DataContext="{StaticResource MainVM}"
                        Command="{Binding TransformToPuzzle}">
                    <Image Stretch="Uniform"
                           Source="../images/DoVui.png"
                           Height="300.52"
                           Width="200.56" />
                </Button>
                <Button DataContext="{StaticResource MainVM}"
                        Command="{Binding TransformToEvaluate}">
                    <Image Stretch="Uniform"
                           Source="../images/TongKet.png"
                           Height="271.52"
                           Width="230.6"
                           Margin="0 20 0 0" />
                </Button>
            </StackPanel>
        </StackPanel>


        <Image Width="454"
               Source="../images/HomeScreen.png"
               Margin="0,370,0,-16"
               HorizontalAlignment="Right"
               Stretch="Uniform" />

    </Grid>

